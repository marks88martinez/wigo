

                <h1 class="page-header">Banner</h1>

                <%if notice%>
                <div class="alert alert-success alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                    <%=notice%>
                </div>
                <% end%>



                <!-- <div class="col-lg-6"> -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                          Listando Banner




                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>nombre</th>
                                            <th>titulo</th>
                                            <th>descripcion</th>
                                            <th></th>

                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% @banners.each do |banner| %>
                                        <tr>
                                            <td><%= banner.id%></td>
                                            <td><%= banner.url_banner%></td>
                                            <td><%= banner.titulo%></td>
                                            <td><%= banner.descripcion%></td>
                                            <td><%= image_tag banner.picture.url(:thumb) %></td>

                                            <td style="width: 150px">
                                              <%=link_to edit_admin_banner_path(banner.id), class: "btn btn-primary btn-circle" do%>
                                            <i class="fa fa-edit"></i>
                                            <%end%>
                                              <%=link_to admin_banner_path(banner.id), class: "btn btn-danger btn-circle" do%>
                                            <i class="fa fa-minus"></i>
                                            <%end%>

                                            </td>

                                        </tr>
                                        <%end%>

                                    </tbody>
                                </table>
                            </div>
